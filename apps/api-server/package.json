{
  "name": "api-server",
  "version": "0.1.0",
  "private": true,
  "description": "基於 NestJS、Cloud Storage、MongoDB 之伺服器",
  "author": "",
  "license": "UNLICENSED",
  "files": [
    "dist",
    "env",
    "node_modules/@community-voting-system",
    "package.json"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack",
    "build:isolate": "npx isolate-package isolate",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "dev": "npm run prebuild && nest start --watch --webpack",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:ui": "npm run test:clear && majestic",
    "test:clear": "jest --clearCache",
    "test:watch": "npm run test:clear && jest --watch --detect-open-handles",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "6.0.0",
    "@google-cloud/storage": "7.13.0",
    "@nestjs/cache-manager": "2.2.2",
    "@nestjs/common": "10.4.4",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/devtools-integration": "0.1.6",
    "@nestjs/event-emitter": "2.0.4",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/mongoose": "10.0.10",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.4",
    "@nestjs/serve-static": "4.0.2",
    "@nestjs/swagger": "7.4.2",
    "@ts-rest/core": "3.51.0",
    "@ts-rest/nest": "3.51.0",
    "await-to-js": "3.0.0",
    "bcrypt": "5.1.1",
    "cache-manager": "5.7.6",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "dayjs": "1.11.12",
    "express": "4.21.0",
    "firebase-admin": "12.6.0",
    "flat": "5.0.2",
    "form-data": "4.0.0",
    "helmet": "7.2.0",
    "jsonwebtoken": "9.0.2",
    "just-diff": "6.0.2",
    "lodash": "4.17.21",
    "mongoose": "8.7.0",
    "mongoose-autopopulate": "1.1.0",
    "ms": "2.1.3",
    "nanoid": "3.3.7",
    "nest-winston": "1.9.7",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.2.2",
    "remeda": "^2.14.0",
    "rimraf": "5.0.10",
    "rxjs": "7.8.1",
    "shx": "0.3.4",
    "winston": "3.14.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.7.3",
    "@community-voting-system/shared": "workspace:*",
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.4",
    "@swc/core": "1.7.26",
    "@swc/jest": "0.2.36",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.7",
    "@types/express": "4.17.21",
    "@types/flat": "5.0.5",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.13",
    "@types/lodash": "4.17.10",
    "@types/multer": "1.4.12",
    "@types/node": "22.7.4",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.8.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "9.11.1",
    "fs-extra": "11.2.0",
    "isolate-package": "~1.15.0",
    "jest": "29.7.0",
    "mongodb-memory-server": "10.0.1",
    "prettier": "2.8.8",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.2",
    "unplugin-swc": "1.5.1",
    "vite-node": "2.1.2",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "transformIgnorePatterns": []
  }
}